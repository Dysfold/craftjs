{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "DOM"
    ],
    "strict": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@craftjs-types"],
    "declaration": true,
    "declarationDir": "types/types",
    "inlineSourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}